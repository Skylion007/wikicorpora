NAME        "{language} Wikipedia"
MAINTAINER  "tomas.effenberger@mail.muni.cz"
INFO        "{language} Wikipedia Corpus built from http://{iso}.wikipedia.org"
PATH     "{compiled_corpus_path}"
ENCODING "UTF-8"
LANGUAGE "{language}"
INFOHREF "http://www.sketchengine.co.uk/documentation/wiki/Corpora/wiki-{iso}"
VERTICAL "{vertical_path}"

TAGSETDOC "{tagsetdoc}"

#=== Attributes ===

{attributes}

#=== Structures ===

# document
STRUCTURE doc {{
    ATTRIBUTE id {{
        LABEL "Wiki page ID"
        TYPE "UNIQUE"
    }}
    ATTRIBUTE url {{
        LABEL "Wiki page URL"
        TYPE "UNIQUE"
    }}
    ATTRIBUTE title {{
        LABEL "Wiki page title"
    }}
    # dynamic attributes
    ATTRIBUTE wordcount
    ATTRIBUTE tld {{
        LABEL "Top level domain"
        DYNAMIC url2domain
        DYNLIB   internal
        ARG1     "1"
        FUNTYPE  i
        FROMATTR url
        TYPE     index
    }}
}}

# section
STRUCTURE section {{
    TYPE "file64"
    ATTRIBUTE level
    ATTRIBUTE title
}}

# paragraph
STRUCTURE p {{
    TYPE "file64"
    ATTRIBUTE heading
}}

# sentence
STRUCTURE s {{
    TYPE "file64"
    #ATTRIBUTE id???
}}

# glue
STRUCTURE g {{
    TYPE "file64"
    DISPLAYTAG 0
    DISPLAYBEGIN "_EMPTY_"
}}

# term
STRUCTURE term {{
    ATTRIBUTE name {{
        LABEL "term name"
    }}
    ATTRIBUTE uncertainty {{
        LABEL "uncertainty level (0 = humnan annotated, 1 = derived from article, 2 = derived globally)"
        DEFAULTVALUE 0
    }}
}}

DOCSTRUCTURE "doc"
DEFAULTATTR "lc"

# TODO: WordSketches: WSDEF WSATTR WSSTRIP TERMBASE TERMDEF
# TODO: DEFFILTERLINK

#=== Controlling display in concordances ===

SHORTREF "=doc.title,#"
HARDCUT 0
MAXCONTEXT 100
MAXDETAIL 0
STRUCTCTX p
#WRAPDETAIL "p,section"?

#=== Controlling the subcorpus creation interface ===

SUBCORPATTRS "doc.url|doc.title"
