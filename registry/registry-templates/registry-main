NAME        "{language} Wikipedia"
MAINTAINER  "tomas.effenberger@mail.muni.cz"
INFO        "{language} Wikipedia Corpus built from http://{iso}.wikipedia.org"
PATH     "{compiled_corpus_path}"
ENCODING "UTF-8"
LANGUAGE "{language}"
INFOHREF "https://github.com/effa/wikicorpora/wiki/corpora"
VERTICAL "{vertical_path}"

TAGSETDOC "{tagsetdoc}"

#=== Attributes ===

{attributes}

#=== Structures ===

# document
STRUCTURE doc {{
    ATTRIBUTE id {{
        LABEL "Wiki page ID"
        TYPE "UNIQUE"
    }}
    ATTRIBUTE url {{
        LABEL "Wiki page URL"
        TYPE "UNIQUE"
    }}
    ATTRIBUTE title {{
        LABEL "Wiki page title"
    }}
    # dynamic attributes
    ATTRIBUTE wordcount
    ATTRIBUTE tld {{
        LABEL "Top level domain"
        DYNAMIC url2domain
        DYNLIB   internal
        ARG1     "1"
        FUNTYPE  i
        FROMATTR url
        TYPE     index
    }}
    ATTRIBUTE t2ld {{
    LABEL "Second level domain"
    DYNAMIC url2domain
    DYNLIB   internal
    ARG1     "2"
    FUNTYPE  i
    FROMATTR url
    TYPE     index
    }}
    ATTRIBUTE urldomain {{
        LABEL "Web domain"
        DYNAMIC url2domain
        DYNLIB   internal
        ARG1     "0"
        FUNTYPE  i
        FROMATTR url
        TYPE     index
    }}
}}

# section
STRUCTURE section {{
    TYPE "file64"
    ATTRIBUTE level
    ATTRIBUTE title
    NESTED 1
}}

# paragraph
STRUCTURE p {{
    TYPE "file64"
    ATTRIBUTE heading {{
        DEFAULT 0
    }}
}}

# sentence
STRUCTURE s {{
    TYPE "file64"
}}

# glue
STRUCTURE g {{
    TYPE "file64"
    DISPLAYTAG 0
    DISPLAYBEGIN "_EMPTY_"
}}

# term
STRUCTURE term {{
    ATTRIBUTE wuri {{
        LABEL "term wuri (last part of Wikipedia URI)"
    }}
    ATTRIBUTE uncertainty {{
        LABEL "uncertainty level"
        DEFAULTVALUE 0
    }}
}}

DOCSTRUCTURE "doc"
DEFAULTATTR "lc"

# TODO: WordSketches: WSDEF WSATTR WSSTRIP TERMBASE TERMDEF
# TODO: DEFFILTERLINK

#=== Controlling display in concordances ===

SHORTREF "=doc.title,#"
HARDCUT 0
MAXCONTEXT 100
MAXDETAIL 0
STRUCTCTX p
#WRAPDETAIL "p,section"?

#=== Controlling the subcorpus creation interface ===

#SUBCORPATTRS "doc.url|doc.title"?
