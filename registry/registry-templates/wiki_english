MAINTAINER	"tomas.effenberger@gmail.com"
NAME	"wiki_english"
VERTICAL_CREATOR	"/opt/TreeTagger/tools/tt-english.sh"
VERTICAL	"| xzcat {vertical_path}"
PATH	"{compiled_corpus_path}"
LANGUAGE	"English"
ENCODING	"UTF-8"
NOLETTERCASE	"0"
RIGHTTOLEFT	"0"
INFOHREF	"https://github.com/effa/wikicorpora/wiki/corpora"
TAGSETDOC	"http://trac.sketchengine.co.uk/wiki/tagsets/penn"
WSDEF	"english-penn_tt-2.5.wsdef.txt"
TERMDEF	"english-penn_tt-terms-2.3.wsdef.m4"
TERMBASE	"/corpora/manatee/wiki/english/terms-ws"
WPOSLIST	",adjective,J.*,adverb,RB.?,conjunction,CC,determiner,DT,noun,N.*,noun singular,NN,noun plural,NNS,numeral,CD,particle,RP,preposition,IN,pronoun,PP.?,verb,V.*,full stop,SENT"
LPOSLIST	",adjective,-j,adverb,-a,conjunction,-c,noun,-n,numeral,-m,preposition,-i,pronoun,-d,verb,-v"

ATTRIBUTE	"word"
ATTRIBUTE	"tag"
ATTRIBUTE	"lempos"
ATTRIBUTE	"lemma" {{
	DYNAMIC   "striplastn"
	DYNLIB    "internal"
	ARG1      "2"
	FUNTYPE   "i"
	FROMATTR  "lempos"
	TYPE      "index"
}}
ATTRIBUTE	"lemma_lc" {{
	DYNAMIC     "utf8lowercase"
	DYNLIB      "internal"
	ARG1        "C"
	FUNTYPE     "s"
	FROMATTR    "lemma"
	TYPE        "index"
	TRANSQUERY  "yes"
	LABEL       "lemma (lowercase)"
}}
ATTRIBUTE	"lc" {{
	DYNAMIC     "utf8lowercase"
	DYNLIB      "internal"
	ARG1        "C"
	FUNTYPE     "s"
	FROMATTR    "word"
	TYPE        "index"
	TRANSQUERY  "yes"
	LABEL       "word (lowercase)"
}}


#=== Structures ===

# document
STRUCTURE doc {{
    ATTRIBUTE id {{
        LABEL "Wiki page ID"
        TYPE "UNIQUE"
    }}
    ATTRIBUTE url {{
        LABEL "Wiki page URL"
        TYPE "UNIQUE"
    }}
    ATTRIBUTE title {{
        LABEL "Wiki page title"
    }}
    # dynamic attributes
    ATTRIBUTE wordcount
    ATTRIBUTE tld {{
        LABEL "Top level domain"
        DYNAMIC url2domain
        DYNLIB   internal
        ARG1     "1"
        FUNTYPE  i
        FROMATTR url
        TYPE     index
    }}
    ATTRIBUTE t2ld {{
    LABEL "Second level domain"
    DYNAMIC url2domain
    DYNLIB   internal
    ARG1     "2"
    FUNTYPE  i
    FROMATTR url
    TYPE     index
    }}
    ATTRIBUTE urldomain {{
        LABEL "Web domain"
        DYNAMIC url2domain
        DYNLIB   internal
        ARG1     "0"
        FUNTYPE  i
        FROMATTR url
        TYPE     index
    }}
}}

# section
STRUCTURE section {{
    TYPE "file64"
    ATTRIBUTE anchor
}}

# paragraph
STRUCTURE p {{
    TYPE "file64"
    ATTRIBUTE heading {{
        DEFAULT 0
    }}
}}

# sentence
STRUCTURE s {{
    TYPE "file64"
}}

# glue
STRUCTURE g {{
    TYPE "file64"
    DISPLAYTAG 0
    DISPLAYBEGIN "_EMPTY_"
}}

