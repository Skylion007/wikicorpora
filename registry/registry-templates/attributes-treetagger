#tagset=treetagger
# attributes for treetagger morfologization

# TODO: ???
#GDEXDEFAULTCONF "/corpora/gdex/configurations/English_lemmatized"

ATTRIBUTE word {{
    TYPE "FD_FGD"
}}
ATTRIBUTE tag {{
    TYPE "FD_FGD"
}}
ATTRIBUTE lempos {{
    TYPE "FD_FGD"
}}
ATTRIBUTE gdex {{
    TYPE "FD_FGD"
}}
ATTRIBUTE   lemma {{
        DYNAMIC striplastn
        DYNLIB  internal
        ARG1    "2"
        FUNTYPE i
        FROMATTR lempos
        TYPE   index
}}
ATTRIBUTE   lc {{
        LABEL   "word (lowercase)"
        DYNAMIC  utf8lowercase
        DYNLIB   internal
        ARG1     "C"
        FUNTYPE  s
        FROMATTR word
        TYPE     index
        TRANSQUERY      yes
}}
ATTRIBUTE   lemma_lc {{
        LABEL   "lemma (lowercase)"
        DYNAMIC  utf8lowercase
        DYNLIB   internal
        ARG1     "C"
        FUNTYPE  s
        FROMATTR lemma
        TYPE     index
        TRANSQUERY      yes
}}
