#tagset=treetagger
#(attributes for treetagger morfologization)

ATTRIBUTE word {{
    TYPE "FD_FGD"
}}

ATTRIBUTE tag {{
    TYPE "FD_FGD"
}}

ATTRIBUTE lempos {{
    TYPE "FD_FGD"
}}

ATTRIBUTE   lemma {{
        DYNAMIC striplastn
        DYNLIB  internal
        ARG1    "2"
        FUNTYPE i
        FROMATTR lempos
        TYPE   index
}}

ATTRIBUTE   lc {{
        LABEL   "word (lowercase)"
        DYNAMIC  utf8lowercase
        DYNLIB   internal
        ARG1     "C"
        FUNTYPE  s
        FROMATTR word
        TYPE     index
        TRANSQUERY      yes
}}

ATTRIBUTE   lemma_lc {{
        LABEL   "lemma (lowercase)"
        DYNAMIC  utf8lowercase
        DYNLIB   internal
        ARG1     "C"
        FUNTYPE  s
        FROMATTR lemma
        TYPE     index
        TRANSQUERY      yes
}}

ATTRIBUTE gdex {{
    TYPE "FD_FGD"
}}

WPOSLIST ",adjective,JJ.?,adverb,RB.?.,conjunction,CC,determiner,DT,noun,N.*,noun singular,NN,noun plural,NNS,preposition,IN,pronoun,PP,verb,V..?|MD"
LPOSLIST ",adjective,-j,adverb,-a,conjunction,-c,noun,-n,preposition,-p,pronoun,-d,verb,-v"
